{
  "compilerOptions": {
    "target": "es2020",         // Otra opción podría ser "es5" según tus necesidades
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",         // Carpeta de salida para los archivos compilados
    "rootDir": "./src",         // Carpeta raíz de tu código fuente
    "resolveJsonModule": true,
    "esModuleInterop": true
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
